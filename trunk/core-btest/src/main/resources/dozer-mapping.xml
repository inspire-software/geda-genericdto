        </field>
        <field>
            <a>currentAddress.addressLine1</a>
            <b>currentAddress.addressLine1</b>
        </field>
        <field>
            <a>currentAddress.addressLine2</a>
            <b>currentAddress.addressLine2</b>
        </field>
        <field>
            <a>currentAddress.city</a>
            <b>currentAddress.city</b>
        </field>
        <field>
            <a>currentAddress.country.name</a>
            <b>currentAddress.countryName</b>
        </field>
        <field>
            <a>currentAddress.postCode</a>
            <b>currentAddress.postCode</b>
        </field>
    </mapping>

